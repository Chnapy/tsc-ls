{
  "compilerOptions": {
    "composite": true,

    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "resolveJsonModule": true,

    "isolatedModules": true,
    "declarationMap": true
  },
  "references": [
    {
      "path": "../common-error"
    },
    {
      "path": "../common-success"
    },
    {
      "path": "../multiple-plugins-success"
    }
  ]
}

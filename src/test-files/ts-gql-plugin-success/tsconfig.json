{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2015",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    "module": "commonjs",
    "lib": ["ESNext", "dom"],

    "plugins": [
      {
        "name": "ts-gql-plugin"
      }
    ]
  },
  "include": ["."]
}

{
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "outDir": "dist",
    "rootDir": "src",

    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es2015",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,

    "module": "commonjs",
    "lib": ["ESNext", "dom"],

    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
        "options": {
          "customRenderer": "./css-custom-renderer.js"
        }
      }
    ]
  },
  "include": ["."]
}
